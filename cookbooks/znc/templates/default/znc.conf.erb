AnonIPLimit  = 10
MaxBufferSize= <%= @max_buffer_size %>
SSLCertFile  = <%= @data_dir %>/znc.pem
Listener4    = <%= @port %>
ConnectDelay = 5
ServerThrottle = 30
Skin         = <%= @skin %>
StatusPrefix = *
<% @modules.each do |mod,params| -%>
LoadModule   = <%= "#{mod} #{params}".strip  %>
<% end -%>
