# ZNC configuration
# This file is managed by Chef.

# In most cases you should NOT edit znc.conf directly. Use webadmin instead. Editing znc.conf by hand can produce race condition with ZNC accessing the config.

# If you really need to edit znc.conf by hand when ZNC is running, do the following: 
# 1. pkill -SIGUSR1 znc 
#      to save current runtime configuration to znc.conf 
# 2. Edit znc.conf 
# 3. pkill -SIGHUP znc 
#      to make ZNC reread its config.

Listen              = <%= @port %>
#BindHost            = <%= @bind_hosts %>
PidFile             = <%= @pid_file %>
AnonIPLimit         = <%= @anon_ip_limit %>
ConnectDelay        = <%= @connect_delay %>
#LoadModule          = <%= @global_modules %>
#MaxBufferSizeList   = <%= @max_buffer_size_list %>
#ServerThrottle      = <%= @server_throttle %>
StatusPrefix        = <%= @status_prefix %>
MOTD                = <%= @motd %>

<User <%= @user_name %>>
    Pass       = <%= @user_password %>
    Admin      = <%= @user_is_admin %>true
    Nick       = <%= @user_nickname %>
    AltNick    = <%= @user_nickname_alt %>_
    Ident      = <%= @user_ident %>
    RealName   = <%= @user_real_name %>
    Buffer     = <%= @user_buffer %>50
    KeepBuffer = <%= @user_keep_buffer %>false
    ChanModes  = <%= @user_chan_modes %>+stn
    Server     = <%= @admin_server %>
    <Chan <%= @user_default_channel %>>
    </Chan>
</User>